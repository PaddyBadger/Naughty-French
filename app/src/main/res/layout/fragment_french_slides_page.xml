<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dummy content. -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView android:id="@+id/title"
            style="@style/titles"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp" />

        <TextView android:id="@+id/english"
            style="@style/englishWords"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <TextView android:id="@+id/french"
            style="@style/frenchWords"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <ImageButton android:id="@+id/speak"
            android:onClick="speakFrench"
            android:gravity="bottom|right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/soundbutton"
            android:layout_margin="10dp"/>

        <ImageButton android:id="@+id/drawing"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_margin="10dp"/>


    </LinearLayout>

</ScrollView>